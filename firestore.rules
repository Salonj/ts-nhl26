rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Perustoiminnot: Kuka voi lukea ja kirjoittaa
    match /tournaments/{tournamentId} {
      // Kaikki voivat lukea turnauksia
      allow read: if true;
      
      // Vain omistaja voi muokata turnausta
      allow update, delete: if request.auth.uid == resource.data.ownerId;
      
      // Kuka tahansa kirjautunut käyttäjä ei voi muokata muita
      allow create: if request.auth != null && request.auth.uid == request.resource.data.ownerId;
      
      // Ottelut-alikokoelma
      match /matches/{matchId} {
        allow read: if true;
        allow write: if get(/databases/$(database)/documents/tournaments/$(tournamentId)).data.ownerId == request.auth.uid;
      }
    }
  }
}